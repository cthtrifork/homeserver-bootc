[Unit]
Description=Configure GitHub Actions Runner
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
User=runner
Group=runner

StateDirectory=actions-runner
WorkingDirectory=/var/lib/actions-runner
EnvironmentFile=/etc/homeserver/metadata/github-runner
Environment=RUNNER_LABELS=self-hosted,Linux,X64,CentOS

ExecStart=/usr/libexec/configure-runner.sh
RemainAfterExit=yes

RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
