{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':disableDigestUpdates',
  ],
  digest: {
    enabled: false,
  },
  rebaseWhen: 'auto',
  packageRules: [
    {
      automerge: true,
      pinDigests: false,
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
      ],
    },
    {
      automerge: true,
      pinDigests: false,
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
      ],
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^build_files/.*\\.sh$/',
      ],
      matchStrings: [
        '(?<depName>[^\\s"\']+)="?(?<currentValue>v?\\d+[^"\'\\s]*)"?\\s+# renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<packageName>[^\\s]+)',
      ],
      datasourceTemplate: '{{{datasource}}}',
      packageNameTemplate: '{{{packageName}}}',
      versioningTemplate: 'semver',
    },
  ],
}
