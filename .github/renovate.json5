{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableDigestUpdates"
  ],
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
        automerge: true,
        matchManagers: [
          'github-actions',
        ],
        matchUpdateTypes: ["major", "minor", "patch"]
    },
  ]
}
